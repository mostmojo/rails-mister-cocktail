<h1><%= @cocktail.name %></h1>
<h2>Ingredients</h2>
<ul>
<% @doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %> | <%= link_to "delete ingredient", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
<% end %>
</ul>
<%= link_to "add an ingredient", new_cocktail_dose_path(@cocktail) %>
<%= link_to "back to listing", cocktails_path %>
